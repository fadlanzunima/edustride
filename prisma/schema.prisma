generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// NextAuth.js Models
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Core User Model
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String? // For credentials provider
  level         String?   @default("S1") // SMA, S1, S2_S3
  institution   String? // School/University name
  bio           String?   @db.Text
  location      String?
  website       String?
  linkedIn      String?
  github        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts     Account[]
  sessions     Session[]
  portfolios   Portfolio[]
  skills       Skill[]
  roadmaps     Roadmap[]
  achievements Achievement[]
  activities   Activity[]
  stats        UserStats?
  quizzes      Quiz[]
  quizAttempts QuizAttempt[]
  userBadges   UserBadge[]

  @@index([email])
  @@index([level])
  @@index([createdAt])
}

// ============================================
// Portfolio Model
// ============================================

model Portfolio {
  id          String          @id @default(cuid())
  userId      String
  title       String
  description String?         @db.Text
  type        PortfolioType   @default(PROJECT)
  status      PortfolioStatus @default(DRAFT)
  thumbnail   String?
  link        String?
  githubUrl   String?
  demoUrl     String?
  startDate   DateTime?
  endDate     DateTime?
  isFeatured  Boolean         @default(false)
  tags        String[]        @default([])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([isFeatured])
  @@index([createdAt])
}

enum PortfolioType {
  PROJECT
  CERTIFICATE
  EXPERIENCE
  PUBLICATION
  AWARD
}

enum PortfolioStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ============================================
// Skill Model
// ============================================

model Skill {
  id          String     @id @default(cuid())
  userId      String
  name        String
  category    SkillCategory @default(TECHNICAL)
  level       SkillLevel @default(BEGINNER)
  progress    Int        @default(0) // 0-100
  description String?    @db.Text
  isPublic    Boolean    @default(true)
  endorsedBy  String[]   @default([]) // Array of user IDs who endorsed
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  quizzes Quiz[]

  @@index([userId])
  @@index([category])
  @@index([level])
  @@unique([userId, name]) // Prevent duplicate skills per user
}

enum SkillCategory {
  TECHNICAL
  SOFT_SKILL
  LANGUAGE
  TOOL
  DOMAIN_KNOWLEDGE
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

// ============================================
// Roadmap Model
// ============================================

model Roadmap {
  id          String        @id @default(cuid())
  userId      String
  title       String
  description String?       @db.Text
  level       String        // SMA, S1, S2_S3
  category    String        // Career, Academic, Skill, etc.
  deadline    DateTime?
  progress    Int           @default(0) // 0-100
  isActive    Boolean       @default(true)
  isTemplate  Boolean       @default(false) // For system-generated templates
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  user  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items RoadmapItem[]

  @@index([userId])
  @@index([level])
  @@index([isActive])
  @@index([isTemplate])
  @@index([deadline])
}

model RoadmapItem {
  id          String            @id @default(cuid())
  roadmapId   String
  title       String
  description String?           @db.Text
  order       Int               @default(0)
  status      RoadmapItemStatus @default(NOT_STARTED)
  deadline    DateTime?
  resources   Json?             // Array of {title, url, type}
  completedAt DateTime?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  roadmap Roadmap @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  @@index([roadmapId])
  @@index([status])
  @@index([order])
}

enum RoadmapItemStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  SKIPPED
}

// ============================================
// Achievement Model
// ============================================

model Achievement {
  id          String           @id @default(cuid())
  userId      String
  title       String
  description String?          @db.Text
  type        AchievementType  @default(OTHER)
  issuer      String?          // Organization that issued it
  issueDate   DateTime?
  expiryDate  DateTime?
  credentialId String?
  credentialUrl String?
  image       String?
  isPublic    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([issueDate])
}

enum AchievementType {
  CERTIFICATION
  AWARD
  PUBLICATION
  PATENT
  COMPETITION
  GRANT
  SCHOLARSHIP
  OTHER
}

// ============================================
// Badge System (Gamification)
// ============================================

model Badge {
  id          String   @id @default(cuid())
  name        String   @unique
  description String   @db.Text
  icon        String   // Icon name or emoji
  category    BadgeCategory @default(OTHER)
  difficulty  BadgeDifficulty @default(MEDIUM)
  points      Int      @default(10)
  color       String   @default("blue") // For UI styling
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  // Relations
  userBadges UserBadge[]

  @@index([category])
  @@index([isActive])
}

model UserBadge {
  id          String   @id @default(cuid())
  userId      String
  badgeId     String
  earnedAt    DateTime @default(now())
  context     String?  @db.Text // Context of why badge was earned
  metadata    Json?    // Additional data

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([earnedAt])
}

enum BadgeCategory {
  SKILL
  PORTFOLIO
  QUIZ
  MILESTONE
  SPECIAL
  OTHER
}

enum BadgeDifficulty {
  EASY
  MEDIUM
  HARD
  LEGENDARY
}

// ============================================
// Skill Assessment & Quiz Models
// ============================================

model Quiz {
  id          String    @id @default(cuid())
  userId      String
  skillId     String?   // Optional: link to specific skill
  title       String
  description String?   @db.Text
  category    SkillCategory @default(TECHNICAL)
  difficulty  QuizDifficulty @default(INTERMEDIATE)
  timeLimit   Int?      // in minutes, null = no limit
  passingScore Int      @default(70) // percentage
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill  Skill?    @relation(fields: [skillId], references: [id], onDelete: SetNull)
  questions QuizQuestion[]
  attempts QuizAttempt[]

  @@index([userId])
  @@index([skillId])
  @@index([category])
  @@index([difficulty])
}

model QuizQuestion {
  id        String   @id @default(cuid())
  quizId    String
  question  String   @db.Text
  type      QuestionType @default(MULTIPLE_CHOICE)
  order     Int      @default(0)
  points    Int      @default(1)
  options   Json?    // Array of {text, isCorrect} for multiple choice
  correctAnswer String? // For simple question types
  explanation String? @db.Text // Optional explanation
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers QuizAnswer[]

  @@index([quizId])
  @@unique([quizId, order])
}

model QuizAttempt {
  id        String   @id @default(cuid())
  quizId    String
  userId    String
  score     Int      @default(0) // percentage
  passed    Boolean  @default(false)
  startedAt DateTime @default(now())
  completedAt DateTime?
  answers   Json?    // Array of {questionId, answer, isCorrect}
  feedback  String?  @db.Text

  // Relations
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionAnswers QuizAnswer[]

  @@index([quizId])
  @@index([userId])
  @@index([completedAt])
}

model QuizAnswer {
  id        String   @id @default(cuid())
  attemptId String
  questionId String
  answer    String   @db.Text // User's answer
  isCorrect Boolean  @default(false)
  points    Int      @default(0)
  createdAt DateTime @default(now())

  // Relations
  attempt  QuizAttempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([attemptId])
  @@index([questionId])
  @@unique([attemptId, questionId])
}

enum QuizDifficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
  ESSAY
}

// ============================================
// Activity Model (Activity Feed)
// ============================================

model Activity {
  id          String       @id @default(cuid())
  userId      String
  type        ActivityType
  title       String
  description String?      @db.Text
  metadata    Json?        // Additional context data
  entityType  String?      // portfolio, skill, roadmap, etc.
  entityId    String?      // ID of related entity
  isPublic    Boolean      @default(true)
  createdAt   DateTime     @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([entityType, entityId])
  @@index([createdAt])
}

enum ActivityType {
  PORTFOLIO_CREATED
  PORTFOLIO_UPDATED
  SKILL_ADDED
  SKILL_LEVEL_UP
  ROADMAP_CREATED
  ROADMAP_COMPLETED
  ROADMAP_ITEM_COMPLETED
  ACHIEVEMENT_EARNED
  PROFILE_UPDATED
  CERTIFICATE_EARNED
  PROJECT_PUBLISHED
  EXPERIENCE_ADDED
}

// ============================================
// User Stats (Cached Aggregates)
// ============================================

model UserStats {
  id                 String   @id @default(cuid())
  userId             String   @unique
  portfolioCount     Int      @default(0)
  skillCount         Int      @default(0)
  roadmapCount       Int      @default(0)
  achievementCount   Int      @default(0)
  totalProfileViews  Int      @default(0)
  weeklyActiveHours  Int      @default(0)
  currentStreak      Int      @default(0)
  longestStreak      Int      @default(0)
  lastActivityAt     DateTime?
  updatedAt          DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
